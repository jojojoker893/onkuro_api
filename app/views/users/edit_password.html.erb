<div class="profile-container">
  <h2 class="profile-title">パスワード変更</h2>

  <%= form_with model: @user, url: user_password_user_path, method: :patch, local: true do |f| %>
    <ul>
      <li>
        <%= f.label :current_password, "現在のパスワード" %><br>
        <%= f.password_field :current_password, required: true %>
      </li>

      <li>  
        <%= f.label :password, "新しいパスワード" %><br>
        <%= f.password_field :password, required: true %>
      </li>

      <li> 
        <%= f.label :password_confirmation, "パスワード確認" %><br>
        <%= f.password_field :password_confirmation, required: true %>
      </li>

    </ul>

    <div>
      <%= f.submit "変更する" %>
    </div>
  <% end %>

  <%= link_to "戻る", edit_user_path %>
