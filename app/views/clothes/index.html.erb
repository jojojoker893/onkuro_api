<% @clothes.each do |cloth| %>
  <%= link_to edit_clothe_path(cloth) do %>
    <div class="cloth_img">
      <% if cloth.image.attached? %>
        <%= image_tag cloth.image.variant(resize_to_fill:[200, 300]) %>
      <% else %>
        <p>画像がありません</p>
      <% end %>
    </div>
  <% end %>

    <h3 class="cloth_name">
      <%= cloth.name %>
    </h3>
    
    <p class="cloth_explanation">
      <%= cloth.explanation%>
    </p>

    <p>
      使用回数: <%= cloth.clothing_usage_logs.count %> 回
    </p>
    
    <%= button_to "使用", usage_log_clothe_path(cloth), method: :post  %>

<% end %>