<%= render "layouts/header" %>
<div class="container">
  <% flash.each do |key, message| %>
    <div class="flash <%= key %>">
      <%= message %>
    </div>
  <% end %>
  
  <div>
    <%= pie_chart @use_logs, donut: true, suffix: "回",title: "使用回数"%>
  </div>
  

  <div class="form_btns">
    <%= link_to "一覧",clothes_path, class: "form_btn"%>
    <%= link_to "服を登録する", new_clothe_path, class: "form_btn" %>
  </div>
  

  <%= link_to "ログアウト", logout_path, data: {turbo_method: :delete} %>
</div>