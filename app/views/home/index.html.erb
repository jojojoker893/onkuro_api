<%= render "layouts/header" %>
<div class="container">
  <% flash.each do |key, message| %>
    <div class="flash <%= key %>">
      <%= message %>
    </div>
  <% end %>

<div class="chart_container">
  <%= pie_chart @use_logs, donut: true, library: {
    title: {
      text: '使用回数',
      align: 'center',
      verticalAlign: 'middle',
      style: {
        fontSize: '16px',
        fontWeight: 'bold'
      }
    },
    plotOptions: {
      pie: {
        dataLabels: {
          enabled: true,
          format: '{point.name}: {point.y}回',
          style: {
            color: '#555'
          }
        },
        size: '100%',
        innerSize: '60%'
      }
    }
  } %>
</div>

  <div class="form_btns">
    <%= link_to "一覧",clothings_path, class: "form_btn"%>
    <%= link_to "服を登録する", new_clothing_path, class: "form_btn" %>
  </div>
  

  <%= link_to "ログアウト", logout_path, data: { turbo_method: :delete, turbo_confirm: 'ログアウトしますか？' } %>
</div>
